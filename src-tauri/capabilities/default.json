{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/ollama",
          "sidecar": true,
          "args": [
            "serve",
            "pull",
            "list",
            "--version"
          ]
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/ollama",
          "sidecar": true,
          "args": [
            "serve"
          ]
        }
      ]
    },
    "opener:default"
  ]
}
